APP_NAME=Jetty
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =====================================================
# DATABASE CONFIGURATION - PostgreSQL
# =====================================================
# This application uses PostgreSQL as its database.
# Configure the following variables for your environment.

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=jetty_db
DB_USERNAME=postgres
DB_PASSWORD=

# For MySQL (legacy - not recommended):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=jetty_db
# DB_USERNAME=root
# DB_PASSWORD=

# =====================================================
# SESSION CONFIGURATION
# =====================================================
# Use 'database' for development, 'redis' for production
SESSION_DRIVER=database
SESSION_LIFETIME=720
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# For Production (requires Redis):
# SESSION_DRIVER=redis
# SESSION_LIFETIME=720
# SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# =====================================================
# CACHE & QUEUE CONFIGURATION
# =====================================================
# Use 'database' for development, 'redis' for production
CACHE_STORE=database
QUEUE_CONNECTION=database

# For Production (requires Redis):
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis

MEMCACHED_HOST=127.0.0.1

# =====================================================
# REDIS CONFIGURATION (Production)
# =====================================================
# Install Redis on production server and enable these settings
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# =====================================================
# CORS CONFIGURATION (Security)
# =====================================================
# Comma-separated list of allowed origins for CORS
# For production, set this to your actual domain(s)
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1:8000,capacitor://localhost

# For Production:
# CORS_ALLOWED_ORIGINS=https://your-production-domain.com,capacitor://localhost

# =====================================================
# RAZORPAY CONFIGURATION (Payments)
# =====================================================
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
